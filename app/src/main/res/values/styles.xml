<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for adding margin to items in middle of screen -->
    <style name="MarginStyleMiddle">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Text on 200 (background color) -->
    <style name="text_on200">
        <item name="android:textColor">@color/text_on200</item>
    </style>

    <!-- Display 1 TextView style -->
    <style name="display1" parent="text_on200">
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginStart">72dp</item>
    </style>

    <style name="display1_view" parent="display1">
        <item name="android:textSize">34sp</item>
        <item name="android:layout_marginTop">72dp</item>
    </style>

    <!-- Subheading TextView style -->
    <style name="sub" parent="display1">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- EditText style -->
    <style name="edittext" parent="text_on200">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Next Button style -->
    <style name="next_button" parent="text_on200">
        <item name="android:text">@string/next</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/abc_btn_borderless_material</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
